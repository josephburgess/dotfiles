[user]
	name = josephburgess
	email = josephburgess@gmail.com
[url "git@github.com:"]
	insteadOf = https://github.com/
[init]
	defaultBranch = main
[core]
	excludesfile = /Users/josephburgess/.gitignore_global
	pager = delta
[interactive]
	diffFilter = delta --color-only
[include]
  path = /Users/josephburgess/.config/delta/themes/catppuccin.gitconfig
[delta]
	features = catppuccin-mocha
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
  side-by-side = false
  line-numbers = true
[merge]
	conflictStyle = zdiff3
