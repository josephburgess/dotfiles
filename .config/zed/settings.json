{
  "theme": "Tokyo Night",
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "vim_mode": true,
  "relative_line_numbers": true,
  "languages": {
    "Python": {
      "language_servers": ["pyright"],
      "preferred_line_length": 140
    }
  },
  "lsp": {
    "settings": {
      "plugins": {
        "ruff": {
          "enabled": true,
          "formatEnabled": true,
          "lineLength": 140,
          "targetVersion": "py311"
        }
      }
    }
  },
  "vtsls": {
    "settings": {
      "typescript": { "tsserver": { "maxTsServerMemory": 16184 } },
      "javascript": { "tsserver": { "maxTsServerMemory": 16184 } }
    }
  }
}
