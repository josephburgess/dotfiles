[
  {
    "context": "Workspace",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space ,": "tab_switcher::Toggle",
      "space /": "project_search::ToggleFocus",
      "space .": "terminal_panel::ToggleFocus",
      "space fb": "tab_switcher::Toggle",
      "space ff": "file_finder::Toggle",
      "space fr": "file_finder::Toggle",
      "space sg": "project_search::ToggleFocus"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
      "space -": "pane::SplitDown",
      "space |": "pane::SplitRight",
      "space wd": "pane::CloseActiveItem",
      "space ca": "editor::ToggleCodeActions",
      "space cd": "outline::Toggle",
      "space cf": "editor::Format",
      "space e": ["workspace::ToggleLeftDock", "Normal"],
      "space ft": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j j": ["vim::SwitchMode", "Normal"],
      "j k": ["vim::SwitchMode", "Normal"],
      "ctrl-s": "workspace::Save"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space e": ["workspace::ToggleLeftDock", "Normal"],
      "[ d": "editor::GoToPrevDiagnostic",
      "] d": "editor::GoToDiagnostic",
      "g d": "editor::GoToDefinition",
      "g r": "editor::FindAllReferences",
      "K": "editor::Hover",
      "space cr": "editor::Rename",
      "space ca": "editor::ToggleCodeActions",
      "space cc": "editor::ShowCompletions",
      "ctrl-s": "workspace::Save"
    }
  },
  {
    "context": "LeftDock && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space e": ["workspace::ToggleLeftDock", "Normal"],
      "q": ["workspace::ToggleLeftDock", "Normal"]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "escape": "terminal_panel::ToggleFocus"
    }
  }
]
